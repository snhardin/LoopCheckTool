<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LoopCheckTool.Wizard.Resources">
    <Style TargetType="Button" x:Key="BaseButton">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="5 2 5 2" />
    </Style>
    <Style TargetType="Button" x:Key="Navigation" BasedOn="{StaticResource BaseButton}">
        <Setter Property="MinWidth" Value="75" />
    </Style>
    <Style TargetType="Label" x:Key="BaseLabel">
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="Label" x:Key="Title" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style TargetType="TextBlock" x:Key="Blurb">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
</ResourceDictionary>