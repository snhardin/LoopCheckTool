<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:LoopCheckTool.Wizard.ViewModels">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="./I18nDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <DataTemplate DataType="{x:Type viewModels:ExtraOptionsViewModel}">
        <CheckBox IsChecked="{Binding IgnoreErrors}">
            <TextBlock Text="{StaticResource IgnoreErrors}" />
        </CheckBox>
    </DataTemplate>
</ResourceDictionary>